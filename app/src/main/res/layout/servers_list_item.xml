<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/nav_background"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_width="60dp"
            android:layout_gravity="center"
            android:layout_height="60dp">
            <ImageView

                android:layout_width="match_parent"
                android:id="@+id/serverPosterImageView"
                android:adjustViewBounds="true"
                android:background="@color/matreshka_third"

                android:layout_height="match_parent"></ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:id="@+id/serverTitleTextView"
                android:fontFamily="@font/tt_norms_bold"
                android:layout_height="wrap_content"></TextView>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:drawablePadding="2dp"
                        android:drawableLeft="@drawable/baseline_people_24"
                        android:layout_width="wrap_content"
                        android:id="@+id/playersCountTextView"
                        android:fontFamily="@font/tt_norms_regular"
                        android:layout_height="wrap_content"></TextView>

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:drawablePadding="2dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:id="@+id/pingTextView"
                        android:drawableLeft="@drawable/round_rss_feed_24"
                        android:fontFamily="@font/tt_norms_regular"
                        android:layout_height="wrap_content"></TextView>


                </TableRow>

            </TableLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>